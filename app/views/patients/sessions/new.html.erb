<h2>Log in</h2>

<% if resource.errors.present? %>
  <div id="error_explanation">
    <ul>
      <% resource.errors.each do |err| %>
        <li><%= err.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

